<%- include('../partials/header') %>
<div class="container">

	<header class="jumbotron">
		<div class="conatiner">
			<h1>Welcome to GoCamp</h1>
			<p>View our best Camp Grounds</p>
			<a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
		</div>
	</header>

	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
			<% campgrounds.forEach(dt => { %>
				<div class="col-md-3 col-sm-6">
					<div class="img-thumbnail" >
						<img class="img-thumbnail" src=<%= dt.image %> />
						<div class="caption">
							<h4><%= dt.name %></h4>
						</div>
						<a class="btn btn-primary" href="/campgrounds/<%=dt._id%>">more</a>
					</div>
				</div>
			<% }); %>	
	</div>

	
</div>

<%- include('../partials/footer') %>