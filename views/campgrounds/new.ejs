<%- include('../partials/header') %>
<div class="container">
	<h1 class="text-center">Create new campground</h1>
	<div class="row">
		<div style="width:30%;margin: 0 auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" placeholder="Enter name" name="name">
				</div>
				<div class="form-group">
					<input type="number" class="form-control" min="0" placeholder="Enter price" name="price">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" placeholder="Enter Image Url" name="image">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" placeholder="Enter Description" name="desc">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-block" type="submit">ADD</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>
</div>

<%- include('../partials/footer') %>