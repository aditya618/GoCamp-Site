<%- include('../partials/header') %>
<div class="container">
	<h1 class="text-center">Edit</h1>
	<div class="row">
		<div style="width:30%;margin: 0 auto;">
			<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" value='<%=campground.name%>' placeholder="Enter name" name="campground[name]">
				</div>
				<div class="form-group">
					<input type="number" class="form-control" value='<%=campground.price%>' min="0" placeholder="Enter price" name="campground[price]">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" value='<%=campground.image%>' placeholder="Enter Image Url" name="campground[image]">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" value='<%=campground.desc%>' placeholder="Enter Description" name="campground[desc]">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-block" type="submit">EDIT</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>
</div>

<%- include('../partials/footer') %>