<%- include('../partials/header') %>
<div class="container">
	<h1 class="text-center">Edit</h1>
	<div class="row">
		<div style="width:30%;margin: 0 auto;">
			<form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" placeholder="Enter Comment" value='<%=comment.text%>' name="comment[text]">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-block" type="submit">EDIT</button>
				</div>
			</form>
			<a href="/campgrounds/<%=campground_id%>">Go Back</a>
		</div>
	</div>
</div>

<%- include('../partials/footer') %>